html
    head
        title= title
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
        script()
    body

        div.container

            h2 Ajouter des questions au questionnaire

            form#creerAjouterQuestions.form-group(name='creerAjouterQuestions', action='javascript:void(0);')
                each question in questions.getListeQuestion()
                    div.form-group
                        if questionnaire.containsQuestion(question.getId())
                            label #{question.getEnonce()} , Nombre Occurences : #{occurence.get(question.getId())}
                            input.form-control(name='question', type='checkbox', value=question.getId() checked)
                        else
                            label #{question.getEnonce()} , Nombre Occurences : #{occurence.get(question.getId())}
                            input.form-control(name='question', type='checkbox', value=question.getId())

            button.modifierAjoutQuestion Modifier le questionnaire

            br
            button.accueil Terminer cr√©ation questionnaire

        if questionnaire
            input(id='idQuestionnaire' type='hidden' value=questionnaire.getId())

